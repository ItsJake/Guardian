<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#FFC6B9"/>
            <stroke
                android:color="#FFBDAE"
                android:width="1dp"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>

        </shape>
    </item>

    <item>

        <shape>
            <solid
                android:color="#FFA591"/>
            <stroke
                android:color="#FF9F89"
                android:width="1dp"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>

        </shape>
    </item>
</selector>